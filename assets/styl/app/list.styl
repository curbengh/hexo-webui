.list-item
  clearfix()
  border-bottom: 1px solid color-border
  user-select: none
  &:hover
    background: list-hover-background
  &.selected
    background: list-selected-background

$list-col
  float: left
  color: color-default
  line-height: list-icon-size
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis
  padding: 8px 10px 8px 0
  box-sizing: border-box

.list-primary-col
  @extend $list-col
  width: 60%

.list-minor-col
  @extend $list-col
  width: 20%

.list-link
  text-decoration: none
  color: color-default
  padding-left: 10px
  &:hover
    text-decoration: underline

$list-icon-after
  font-size: 11px
  position: absolute
  top: 3px
  left: 10px

.list-icon
  width: list-icon-size
  height: list-icon-size
  position: relative
  float: left
  display: block
  color: color-grey
  icon(fa-var-file-o, list-icon-size)
  &.folder
    @extend $fa-icon-folder-o
  &.text
    color: color-default
    @extend $fa-icon-file-text-o
  &.image
    color: list-icon-image-color
    &:after
      @extend $list-icon-after
      content: fa-var-picture-o
  &.video
    color: list-icon-video-color
    &:after
      @extend $list-icon-after
      content: fa-var-video-camera
  &.audio
    color: list-icon-audio-color
    &:after
      @extend $list-icon-after
      content: fa-var-music
  &.code
    color: list-icon-code-color
    &:after
      @extend $list-icon-after
      content: fa-var-code

.upload-icon
  @extend $fa-icon-upload

.new-folder-icon
  @extend $fa-icon-folder